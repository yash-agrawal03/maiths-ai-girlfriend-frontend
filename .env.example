# Environment Configuration for Maiths AI Girlfriend
# Copy this to .env in your project root and modify as needed

# Backend API Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_API_TIMEOUT=30000

# Backend API Endpoints (customize if your backend uses different routes)
REACT_APP_CHAT_ENDPOINT=/chat
REACT_APP_HEALTH_ENDPOINT=/health

# UI Feature Toggles
REACT_APP_FLOATING_HEARTS=true
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_SHOW_DEBUG_INFO=false

# Maiths Personality Customization
REACT_APP_AI_NAME=Maiths
REACT_APP_AI_TITLE=AI Tech Girlfriend

# Development Settings
REACT_APP_ENABLE_CONSOLE_LOGS=true
REACT_APP_MOCK_BACKEND=false

# CORS Settings (for production)
REACT_APP_CORS_ORIGIN=http://localhost:3000
